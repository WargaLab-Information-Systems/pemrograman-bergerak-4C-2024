<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="248sp"
        android:layout_height="33sp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="123dp"
        android:text="Universitas Trunojoyo"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="236sp"
        android:layout_height="48sp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="123dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:text="Selamat datang di Aplikasi \nmilik Universitas Trunojoyo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="393dp"
        android:layout_height="357dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/buku" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:text="Masukkan nama kamu"
        android:textSize="16sp"
        android:ems="18"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="55sp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="55sp"
        android:background="@drawable/kotak"
        android:onClick="beranda"
        android:text="Lanjut"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />




</androidx.constraintlayout.widget.ConstraintLayout>